{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2017",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "outDir": "build",
  },
  "exclude": ["node_modules"]
}
